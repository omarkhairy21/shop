extends ../layout/main-layout.pug


block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="  /css/product.css")

block content
    
    main
     include ../includes/variables.pug 
        form.product-form(action=('/admin/' + addOrEdit ), method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=valTitle)#title
            .form-control
                label(for="imageUrl") Image URL  
                input(type="text", name="imageUrl", value=valImageUrl)#imageUrl
            .form-control
                label(for="Price") Price
                input(type="number", name="price",step="0.01",value=valPrice)#price
            .form-control
                label(for="description") Description      
                textarea(name="description", cols="43", rows="5") #{valDescription}
                if editing
                    - var productID = product.id
                    input(type="hidden", value=productID, name="productId")                 
            button.btn(type="submit") #{valBtn}
        
                